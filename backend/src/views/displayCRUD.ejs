<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GetCRUD</title>
    <style>
        table, th, td {
          border:1px solid black;
          border-collapse: collapse;
          text-align: center;
          margin: 10px;

        }
        .btn-edit{
            background-color: orange;
            border-radius: 5px;
            padding: 5px 20px;
            margin: 10px;
            display: inline-block;
            

            
        }
        .btn-update{
            border-radius: 5px;
            padding: 5px 20px;
            display: inline-block;
            background-color: cornsilk;

        }
    </style>
</head>

<body>
    
    <h2>TH elements define table headers</h2>
    
    <table style="width:100%">
      <tr>
        <th>Email</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
      <% for(let i=0; i < dataTable.length; i++) { %>
        <tr>
          <td><%= dataTable[i].email %></td>
          <td><%= dataTable[i].firstName %></td>
          <td><%= dataTable[i].lastName %></td>
          <td><%= dataTable[i].address %></td>
          <td>
             <a type="button" href="edit-crud?id=<%= dataTable[i].id%>"  class="btn-edit" >Edit</a >
            <a type="button" href="delete-crud?id=<%= dataTable[i].id%>""  class="btn-update">Delete</a >

          </td>



        </tr>
     <% } %>
    </table>
    
    </body>
</html>